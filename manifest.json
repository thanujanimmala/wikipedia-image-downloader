{
"manifest_version": 3,
"name": "Smart Image Downloader",
"version": "2.0",
"description": "Preview and download selected images from Wikipedia and similar pages.",
"permissions": ["downloads", "scripting", "activeTab"],
"host_permissions": ["<all_urls>"],
"action": {
"default_popup": "popup.html",
"default_icon": {
"16": "icon.png",
"48": "icon.png",
"128": "icon.png"
}
}
}